<%=form_with(url: payments_create_path(:id=>@reservation.id), method: "post") do |form|%>
<div class="container  justify-content-center">
<div class="card bg-info mb-3" style="width: 18rem;">
  	 <div class="card-header">Payment</div>
  <div class="card-body">
			<p class="card-text">
				<table class=" table table-striped table-bordered">
					<tbody>
						<tr>
							<td>Seats:<%= @reservation.seats%></td>
						</tr>
						<tr>
							<td>Amount:<%= @reservation.amount%></td>
						</tr>
					</tbody>
				</table>
			</p>
			<%= form.submit "Proceed to Pay",class:"btn btn-primary"%>
			</div>
		</div>
	</div>
<%end%>


